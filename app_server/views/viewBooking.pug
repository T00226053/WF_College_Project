extends layout

block content
	div.backColour
		.row.banner
			.col-12
				h1= title
		.row
			.col-12.col-lg-8
				p
					| Enter your information to view a class you have booked.
					br
					br
					br
					
				form
					label Enter your Member ID:
					br
					input#id(type='text', name='id')
					br
					br
					
				table.custab
					tr
						th Member ID
						th Member Name
						th Class Name
						th Class Length(hours)
						th Date
						th Time
					tr
						td 1
						td Liam
						td Yoga
						td 1
						td 01/01/2000
						td 12:00
					each booking in bookings
						tr
							td #{booking.id}
							td #{booking.memberName}
							td #{booking.className}
							td #{booking.classLength}
							td #{booking.date}
							td #{booking.time}